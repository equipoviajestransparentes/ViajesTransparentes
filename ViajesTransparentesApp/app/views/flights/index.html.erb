<h1>Listing flights</h1>

<table>
  <tr>
    <th>Detail</th>
    <th>Vuelo origen</th>
    <th>Vuelo regreso</th>
    <th>Linea origen</th>
    <th>Linea regreso</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.detail_id %></td>
    <td><%= flight.vuelo_origen %></td>
    <td><%= flight.vuelo_regreso %></td>
    <td><%= flight.linea_origen %></td>
    <td><%= flight.linea_regreso %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

