<%= form_for(@public_officer) do |f| %>
  <% if @public_officer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@public_officer.errors.count, "error") %> prohibited this public_officer from being saved:</h2>

      <ul>
      <% @public_officer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="panel panel-info">
	<div class="panel-heading" align="center">
		<h4><span class="glyphicon glyphicon-user"></span> Registro de Servidor Publico</h4>
	</div>
	<br />
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-info col-md-12">
					<div class="panel-body">
						<div class="row">
						  <div class="field form-group col-md-4">
							<%= f.label :nombre, "Nombre(s)", :class => "control-label" %>
							<%= f.text_field :nombre, :class => "form-control input-sm", :placeholder => "Nombre" %>
						  </div>
						  <div class="field form-group col-md-4">
							<%= f.label :ap_paterno, "Apellido paterno", :class => "control-label" %>
							<%= f.text_field :ap_paterno, :class => "form-control input-sm", :placeholder => "Apellido paterno" %>
						  </div>
						  <div class="field form-group col-md-4">
							<%= f.label :ap_materno, "Apellido materno", :class => "control-label" %>
							<%= f.text_field :ap_materno, :class => "form-control input-sm", :placeholder => "Apellido materno" %>
						  </div>
						</div>
						<div class="row"> 
							<div class="field form-group col-md-4">
								<%= f.label :id_institucion, "Institución", :class => "control-label" %>
								<%= f.collection_select :id_institucion, Institucion.all, :id, :institucion, {:prompt => 'Seleccione una opción'}, {:class => 'form-control input-sm'}%>
							</div>
							<div class="field form-group col-md-4">
								<%= f.label :id_unidad_adm, "Unidad administrativa", :class => "control-label" %>
								<%= f.collection_select :id_unidad_adm, UnidadAdm.all, :id, :unidad_adm, {:prompt => 'Seleccione una opción'}, {:class => 'form-control input-sm'}%>
							</div>
							<div class="field form-group col-md-4">
								<%= f.label :id_cargo_superior, "Cargo superior", :class => "control-label" %>
								<%= f.collection_select :id_cargo_superior, Cargo.all, :id, :cargo, {:prompt => 'Seleccione una opción'}, {:class => 'form-control input-sm'}%>
							</div>
						</div>
						<div class="row">
							<div class="field form-group col-md-4">
								<%= f.label :id_cargo, "Cargo", :class => "control-label" %>
								<%= f.collection_select :id_cargo, Cargo.all, :id, :cargo, {:prompt => 'Seleccione una opción'}, {:class => 'form-control input-sm'}%>
							</div>
							<div class="field form-group col-md-4">
								<%= f.label :id_puesto,"Puesto", :class => "control-label" %>
								<%= f.collection_select :id_puesto, Puesto.all, :id, :puesto, {:prompt => 'Seleccione una opción'}, {:class => 'form-control input-sm'}%>
							</div>
							<div class="field form-group col-md-4">
								<%= f.label :id_tipo_personal, :class => "control-label" %><br />
								<%= f.collection_select :id_tipo_personal, TipoPersonal.all, :id, :tipo_personal, {:prompt => 'Seleccione una opción'}, {:class => 'form-control input-sm'} %>
							</div>
						</div>
						<div class="row">
							<div class="field form-group col-md-4">
								<%= f.label :correo_electronico, "Correo electrónico ", :class => "control-label" %><br />
								<%= f.text_field :correo_electronico, :class => "form-control input-sm", :placeholder => "@Correo electrónico"  %>
							</div>
						<div class="form-group col-md-4">
							<label for="exampleInputFile">Elige foto de perfil</label>
							<input type="file" id="exampleInputFile" class="btn btn-default btn-mdx" >
						</div>
						</div>
						<div class="row-fluid">
							<div class="actions col-md-offset-10">
							  <%= f.submit "Guardar", :class => 'btn btn-primary' %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>
