<h1>Listing searches</h1>

<table>
  <tr>
    <th>Keywords</th>
    <th>Category</th>
    <th>Min date</th>
    <th>Max date</th>
    <th>Min gasto</th>
    <th>Max gasto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @searches.each do |search| %>
  <tr>
    <td><%= search.keywords %></td>
    <td><%= search.category_id %></td>
    <td><%= search.min_date %></td>
    <td><%= search.max_date %></td>
    <td><%= search.min_gasto %></td>
    <td><%= search.max_gasto %></td>
    <td><%= link_to 'Show', search %></td>
    <td><%= link_to 'Edit', edit_search_path(search) %></td>
    <td><%= link_to 'Destroy', search, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

