					</div>
				</fieldset>
				<fieldset>
					<h5>Origen</h5>
					<div class="form-group col-md-4">
						<label class="control-label">Pais</label>
						<select class="form-control input-sm">
						  <option>Seleccione una opción</option>
						  <option>2</option>
						  <option>3</option>
						  <option>4</option>
						  <option>5</option>
						</select>
					</div>
					<div class="form-group col-md-4">
						<label class="control-label">Estado</label>
						<select class="form-control input-sm">
						  <option>Seleccione una opción</option>
						  <option>2</option>
						  <option>3</option>
						  <option>4</option>
						  <option>5</option>
						</select>
					</div>
					<div class="form-group col-md-4">
						<label class="control-label">Ciudad</label>
						<select class="form-control input-sm">
						  <option>Seleccione una opción</option>
						  <option>2</option>
						  <option>3</option>
						  <option>4</option>
						  <option>5</option>
						</select>
					</div>
				</fieldset>
				<fieldset>			
					<h5>Destino</h5>
					<div class="form-group col-md-4">
						<label class="control-label">Pais</label>
						<select class="form-control input-sm">
						  <option>Seleccione una opción</option>
						  <option>2</option>
						  <option>3</option>
						  <option>4</option>
						  <option>5</option>
						</select>
					</div>
					<div class="form-group col-md-4">
						<label class="control-label">Estado</label>
						<select class="form-control input-sm">
						  <option>Seleccione una opción</option>
						  <option>2</option>
						  <option>3</option>
						  <option>4</option>
						  <option>5</option>
						</select>
					</div>
					<div class="form-group col-md-4">
						<label class="control-label">Ciudad</label>
						<select class="form-control input-sm">
						  <option>Seleccione una opción</option>
						  <option>2</option>
						  <option>3</option>
						  <option>4</option>
						  <option>5</option>
						</select>
					</div>
				</fieldset>
				<fieldset>
					<div class="actions col-md-12">
						<%= f.submit 'Guardar', :class => 'btn btn-primary' %>
					</div>
				</fieldset>
			</div>
		</div>
		<div class="col-md-3">
		</div>




		<div class="field">
			<%= f.label :localidad_origen %><br />
			<%= f.number_field :localidad_origen %>
		</div>
		<div class="field">
			<%= f.label :localidad_destino %><br />
			<%= f.number_field :localidad_destino %>
		</div>
		<div class="field">
			<%= f.label :tipo_viaje %><br />
			<%= f.number_field :tipo_viaje %>
		</div>
		
		
	</div>
<% end %>
