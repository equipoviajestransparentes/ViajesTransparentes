<div class="row-fluid" >
	<label class="control-label">Tipo de Viaje</label>
	<span class="row"><%= TipoViajeCatalogo.find(@trip.tipo_viaje).tipo_viaje %></span>
</div>
<div class="row-fluid" >
	<label class="control-label">Destino</label>
	<span class="row"><%= @trip.pais_d + " / " + @trip.estado_d %></span>
</div>
<% if @trip.detail != nil %>
<%= render "details/informacion_detail" %>
<% end %>
<% if @expense != nil %>
<%= render "expenses/informacion_expenses" %>
<% end %>