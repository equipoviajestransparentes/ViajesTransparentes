<h1>Listing trips</h1>

<table>
  <tr>
    <th>Public officer</th>
    <th>Localidad origen</th>
    <th>Localidad destino</th>
    <th>Tipo viaje</th>
    <th>Fechainicio com</th>
    <th>Fechafin com</th>
    <th>Tema</th>
    <th>Motivo</th>
    <th>Resultado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.public_officer_id %></td>
    <td><%= trip.localidad_origen %></td>
    <td><%= trip.localidad_destino %></td>
    <td><%= trip.tipo_viaje %></td>
    <td><%= trip.fechainicio_com %></td>
    <td><%= trip.fechafin_com %></td>
    <td><%= trip.tema %></td>
    <td><%= trip.motivo %></td>
    <td><%= trip.resultado %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

